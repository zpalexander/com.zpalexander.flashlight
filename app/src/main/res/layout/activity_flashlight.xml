<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Flashlight" >

    <ImageButton
        android:id="@+id/led_toggle"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dip"
        android:layout_height="110dip"
        android:layout_above="@+id/screen_toggle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="#000000"
        android:contentDescription="@string/flashlight_icon"
        android:onClick="changeLED"
        android:src="@drawable/lightbulb" />

    <ImageButton
        android:id="@+id/screen_toggle"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dip"
        android:layout_height="110dip"
        android:layout_alignLeft="@+id/led_toggle"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:contentDescription="@string/settings_icon"
        android:onClick="changeScreen"
        android:src="@drawable/phone_icon" />

</RelativeLayout>